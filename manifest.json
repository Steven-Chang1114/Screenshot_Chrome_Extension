{
    "manifest_version": 2,
    "name": "FacialR&A",
    "Description": "Detect and analyse the human faces appear on the browser",
    "version": "0.1",
    "icons": {"128": "./images/icon.png"},
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["./dist/js/bundle.js"]
    }],
    "background": {
        "scripts": ["./src/background.js"]
    },
    "browser_action": {
        "default_icon": "./images/icon.png",
        "default_popup": "./popup/popup.html",
        "default_title": "Upload the picture"
    },
    "permissions": ["activeTab", "tabs"] 
}