{
    "manifest_version": 2,
    "name": "Screenshot",
    "Description": "Screenshot the browser as user clicks the icon",
    "version": "0.1",
    "icons": {"128": "./images/icon.png"},
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["./dist/js/bundle.js"]
    }],
    "background": {
        "scripts": ["./src/background.js"]
    },
    "permissions": ["activeTab", "tabs"] 
}